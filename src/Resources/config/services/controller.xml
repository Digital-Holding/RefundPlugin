<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="sylius_refund_plugin.controller.api.create_customer_refund_request_action" class="Sylius\RefundPlugin\Controller\Api\CreateCustomerRefundRequestAction">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="sylius_refund_plugin.command_bus"/>
            <argument type="service" id="validator"/>
        </service>

        <service id="sylius_refund_plugin.controller.api.show_application_reason_by_type" class="Sylius\RefundPlugin\Controller\Api\ShowApplicationReasonsByType">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="sylius_refund_plugin.command_bus"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="sylius_refund.repository.application_reason"/>
            <argument type="service" id="sylius_refund.view_factory.application_reason"/>
        </service>

        <service id="sylius_refund_plugin.controller.api.show_shop_user_refund_request_list" class="Sylius\RefundPlugin\Controller\Api\ShowShopUserRefundRequestList">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="sylius_refund_plugin.command_bus"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="sylius_refund.view_factory.refund_request"/>
            <argument type="service" id="sylius_refund.repository.refund_request"/>
            <argument type="service" id="security.token_storage"/>
        </service>

        <service id="sylius_refund_plugin.controller.api.show_shop_user_refund_request_by_id" class="Sylius\RefundPlugin\Controller\Api\ShowShopUserRefundRequestById">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="sylius_refund_plugin.command_bus"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="sylius_refund.view_factory.refund_request"/>
            <argument type="service" id="sylius_refund.repository.refund_request"/>
            <argument type="service" id="security.token_storage"/>
        </service>
    </services>
</container>
