<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Sylius\RefundPlugin\Entity\RefundRequestMessage" table="sylius_refund_refund_request_message">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="dateTime" column="datetime" type="datetime"/>
        <field name="message" column="message" type="string" />

        <many-to-one field="shopUser" target-entity="Sylius\Component\Core\Model\ShopUserInterface">
            <join-column name="shop_user_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
        <many-to-one field="adminUser" target-entity="Sylius\Component\Core\Model\AdminUserInterface">
            <join-column name="admin_user_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one target-entity="Sylius\RefundPlugin\Entity\RefundRequestInterface" field="refundRequest" inversed-by="messages">
            <join-column name="refund_request_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="refundRequestMessageFiles" target-entity="Sylius\RefundPlugin\Entity\RefundRequestMessageFileInterface" mapped-by="refundRequestMessage">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <one-to-many field="unreadedRefundRequestMessages" target-entity="Sylius\RefundPlugin\Entity\UnreadedRefundRequestMessageInterface" mapped-by="refundRequestMessage">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
