<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Sylius\RefundPlugin\Entity\RefundRequest" table="sylius_refund_refund_request">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="state" column="state" type="string" />
        <field name="createdAt" column="created_at" type="datetime"/>

        <many-to-one field="shopUser" target-entity="Sylius\Component\Core\Model\ShopUserInterface">
            <join-column name="shop_user_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one field="channel" target-entity="Sylius\Component\Core\Model\ChannelInterface">
            <join-column name="channel_id" />
        </many-to-one>

        <many-to-one field="order" target-entity="Sylius\Component\Order\Model\OrderInterface">
            <join-column name="order_id" />
        </many-to-one>

        <many-to-one target-entity="Sylius\RefundPlugin\Entity\ApplicationReasonInterface" field="applicationReason" inversed-by="refundRequests">
            <join-column name="application_reason_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="messages" target-entity="Sylius\RefundPlugin\Entity\RefundRequestMessageInterface" mapped-by="refundRequest" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-one field="lineItem" target-entity="Sylius\RefundPlugin\Entity\LineItemInterface">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="line_item_id" referenced-column-name="id" nullable="false" />
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
